<h1>Add a new review for the {{model.name}}</h1>

<form id="newReview">

  <div class="form-group">
    <label for="description">Add review</label>
    {{textarea id='description' class='form-control' placeholder='Add review' value=description}}
  </div>

  <button type="submit" class="btn btn-success btn-block" data-dismiss="modal" {{action 'save'}}>Save</button>
  <footer><h3 style="float:left;"> <span id="counter"></span> </h3>
  </footer>
</form>
