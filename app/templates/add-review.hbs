<h1>Add a new review for the {{model.name}}</h1>

<form>

  <div class="form-group">
    <label for="description">Add review</label>
    {{textarea id='description' class='form-control' placeholder='Add review' value=description}}
  </div>

  <button type="submit" class="btn btn-success btn-block" {{action 'save'}}>Save</button>
</form>
