<h1>Add a new restaurant</h1>

<form>
  <div class="form-group">
    <label for="name">Restaurant name</label>
    {{input id='name' class='form-control' placeholder='Name' value=name}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{input id='description' class='form-control' placeholder='Description' value=description}}
  </div>
  <div class="form-group">
    <label for="address">Restaurant address</label>
    {{input id='address' class='form-control' placeholder='Address' value=address }}
  </div>
  <button type="submit" class="btn btn-success btn-block" data-dismiss="modal" {{action 'save'}}>Save</button>
</form>
