{{#each model as |restaurant|}}
  <div class="row clearfix well">
      {{#link-to 'restaurant' restaurant.id}}{{restaurant.name}}{{/link-to}}
  </div>
{{/each}}


<div class="new-restaurant">
  {{#link-to 'add-restaurant'}}<button type="submit" class="btn btn-block btn-success" {{action 'add'}}>Add Restaurant</button>{{/link-to}}
  <div id="addRestaurant" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Restaurant</h4>
        </div>
        <div class="modal-body">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>
